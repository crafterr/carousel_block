
{%
    set classes = [
    'slider slide',
]
%}
<section {{ attributes.addClass(classes) }}">
    {{ title_prefix }}
    {% if label %}
        <h2{{ title_attributes.addClass('visually-hidden') }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% block content %}
        {% for item in items %}
        <div class="slick-list">
            <img data-lazy="{{ item.image_url }}" data-srcset="{{ item.image_url }}" data-sizes="100vw" alt="{{ item.get('image').alt }}">

            <p><span class="title">{{ item.get('name').value }}</span> <br /><span class="caption">{{ item.get('caption_text').value }}</span></p>
        </div>
        {% endfor %}
    {% endblock %}
</section>
